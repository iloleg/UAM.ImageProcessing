<Window x:Class="UAM.PTO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:UAM.PTO"
        Title="PO_2011" Height="350" Width="525">
    <DockPanel Name="panel">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open..." Command="Open" CommandParameter="{Binding image}"></MenuItem>
                <MenuItem Header="_Save" Command="Save"></MenuItem>
                <Separator/>
                <MenuItem Header="E_xit" Command="local:Commands.Exit"></MenuItem>
            </MenuItem>
        </Menu>
        <Image UseLayoutRounding="True" x:Name="image" Width="{Binding Path=Width}" Height="{Binding Path=Height}"/>
    </DockPanel>
</Window>
